<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">Inherit Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                    <field name="department"/>
                    <field name="check_send"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="supplier"/>
                </xpath>
                <xpath expr="//button[@name='button_confirm']" position="before">
                    <button name="btn_send" type="object" string="Send To Accountant" class="oe_highlight"
                            groups="exam2.group_purchasing_staff"
                            attrs="{'invisible':[('check_send','=',True)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>